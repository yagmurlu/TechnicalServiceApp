@model EntityLayer.Concrete.Todo
@{
    ViewBag.Title = "AddTodoContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<!DOCTYPE HTML>
<link href="~/Themes/admin_panel/web/css/style.css" rel="stylesheet" />
<html>
<body class="cbp-spmenu-push">

    <div class="main-content">
        <!-- main content start-->

        <div id="page-wrapper">
            <h3 class="title1"> </h3>
            <div class="main-page compose">
                @using (Html.BeginForm("AddTodoContact", "Todo", FormMethod.Post))
                {

                    <div class="form-group">

                        @Html.DisplayFor(x => x.Contact.SenderMail)
                        <br /><br />

                        @Html.DisplayFor(x => x.Contact.RecevierMail)
                        <br /><br />

                        @Html.DisplayFor(x => x.Contact.Heading)
                        <br /><br />
                        @Html.DisplayFor(x => x.Contact.Contents)
                        <br /><br />

                        @Html.DisplayFor(x => x.Contact.ContactDate)
                        <br /><br />
                        @Html.DisplayFor(x=>x.Done)
                        @Html.DisplayFor(x=>x.Working)
                        @Html.DisplayFor(x=>x.TodoStatus)
                        @Html.DisplayFor(x => x.ContactId)
                        <br /><br />

                        <br /><br />



                    </div>
                }
                </div>
        </div>
    </div>
</body>
</html>
