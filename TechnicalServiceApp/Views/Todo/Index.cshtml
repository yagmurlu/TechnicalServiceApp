@using EntityLayer.Concrete
@model List<Todo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE HTML>

<link href="~/Themes/admin_panel/web/css/style.css" rel="stylesheet" />
<html>
<body class="cbp-spmenu-push">

    <div class="main-content">
        <!-- main content start-->

        <div id="page-wrapper">
            <h3 class="title1"> </h3>
            <div class="main-page compose">
                <div class="panel-heading" style="text-align:center">
                    <h3>TALEPLER</h3>
                </div>

                <div class="col-md-12 compose widget-shadow" style="background-color:lightgray">
                    <div class="panel-default">
                        <div class="inbox-page">
                            <div class="card-body p-0">
                                <table class="table">
                                    <thead style=" background-color:black;color:white">
                                        <tr>
                                            <th style="width: 20%" class="text-center">
                                                Gönderen
                                            </th>
                                            <th style="width: 15%" class="text-center">
                                                Konu
                                            </th>
                                            <th style="width: 35%" class="text-center">
                                                İçerik
                                            </th>

                                            <th style="width: 30%" class="text-center">
                                                Durum
                                            </th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <ul class="list-inline">
                                                    <li class="list-inline-item">
                                                        <div class="user_img">
                                                            @*<img style="width:130px;height:30px" alt="Avatar" src="@item.Contact." >*@
                                                        </div>
                                                        <b style="position:absolute" ;class="text-align:center">@item.Contact.SenderMail</b>

                                                    </li>
                                                </ul>
                                            </td>
                                            <td style="position:absolute" ;class="text-align:center">
                                                <b>
                                                    <a href="/Contact/GetInboxMessageDetails/@item.ContactId" style="color:black">
                                                        @item.Contact.Heading
                                                    </a>
                                                </b>
                                                <br />
                                                <small>
                                                    <i>@item.Contact.ContactDate.ToShortDateString()</i>
                                                </small>
                                            </td>
                                            <td>
                                                <a href="/Contact/GetInboxMessageDetails/@item.ContactId" style="color:black">
                                                    @item.Contact.Contents
                                                </a>
                                            </td>
                                            @{
                                                if (item.Working == true && item.Done == true)
                                                {
                                                    <td class="project-actions text-right">

                                                        <a class="btn btn-danger btn-sm" href="/Todo/TodoDelete/@item.TodoId">

                                                            Sil
                                                        </a>
                                                    </td>
                                                }
                                                else if (item.Done == true)
                                                {
                                                    <td class="project-actions text-right">
                                                        <a class="btn btn-danger btn-sm" href="/Todo/TodoDelete/@item.TodoId">

                                                            Sil
                                                        </a>
                                                    </td>
                                                }
                                                else if (item.Working == true)
                                                {
                                                    <td class="project-actions text-right">
                                                        <a class="btn btn-success btn-sm" href="/Todo/Completed/@item.TodoId">

                                                            Tamamlandı
                                                        </a>
                                                        <a class="btn btn-danger btn-sm" href="/Todo/TodoDelete/@item.TodoId">

                                                            Sil
                                                        </a>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td class="project-actions text-right">

                                                        <a class="btn btn-primary btn-sm" href="/Todo/RequestReceived/@item.TodoId">

                                                            Talep Alındı
                                                        </a>

                                                        <a class="btn btn-success btn-sm" href="/Todo/Completed/@item.TodoId">

                                                            Tamamlandı
                                                        </a>
                                                        <a class="btn btn-danger btn-sm" href="/Todo/TodoDelete/@item.TodoId">

                                                            Sil
                                                        </a>
                                                    </td>
                                                }

                                            }
                                        </tr>
                                    }

                                </table>

                            </div>


                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
</body>
</html>
