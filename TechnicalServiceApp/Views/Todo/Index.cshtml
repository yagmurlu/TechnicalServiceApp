@using EntityLayer.Concrete
@model List<Todo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE HTML>
<link href="~/admin_panel/web/css/style.css" rel="stylesheet" />
<html>
<body class="cbp-spmenu-push">

    <div class="main-content">
        <!-- main content start-->

        <div id="page-wrapper">
            <h3 class="title1"> </h3>
            <div class="main-page compose">

                <div class="col-md-12 compose widget-shadow">
                    <div class="panel-default">


                        <div class="inbox-page">

                            <div class="panel-heading">
                                Yapılacaklar
                            </div>
                            <div class="card-body p-0">
                                <table class="table table-striped projects">
                                    <thead>
                                        <tr>
                                            <th style="width: 1%">
                                                #
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Gönderen
                                            </th>
                                            <th style="width: 10%" class="text-center">
                                                Konu
                                            </th>
                                            <th style="width: 40%" class="text-center">
                                                İçerik
                                            </th>

                                            <th style="width: 30%" class="text-center">
                                                Durum
                                            </th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.TodoId
                                            </td>
                                            <td>
                                                <ul class="list-inline">
                                                    <li class="list-inline-item">

                                                        <div class="user_img">
                                                            <img style="width:130px;height:30px" alt="Avatar" src="@item.Contact.User.UserImage">
                                                        </div>
                                                        <b style="position:absolute" ;class="text-align:center">  @item.Contact.User.UserName @item.Contact.User.UserSurname</b>

                                                    </li>
                                                </ul>
                                            </td>
                                            <td style="position:absolute" ;class="text-align:center">
                                                <b>
                                                    @item.Contact.Heading
                                                </b>
                                                <br />
                                                <small>
                                                    <i>@item.Contact.ContactDate.ToShortDateString()</i>
                                                </small>
                                            </td>
                                            <td>
                                                @item.Contact.Contents
                                            </td>

                                            <td class="project-actions text-right">
                                                <a class="btn btn-success btn-sm" href="/Default/Headings/@item">
                                                    <i class="fas fa-folder">
                                                    </i>
                                                    Yapıldı
                                                </a>
                                                <a class="btn btn-danger btn-sm" href="/WriterPanelContent/AddContent/@item">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Devam Ediyor
                                                </a>
                                            </td>


                                        </tr>
                                    }
                                </table>

                            </div>


                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
</body>
</html>