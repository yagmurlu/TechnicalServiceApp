@using EntityLayer.Concrete
@model List<Contact>
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-comments-o"></i><span class="badge">@ViewBag.messageList</span></a>
    <ul class="dropdown-menu">
        <li class="dropdown-menu-header">
            <strong>Mesajlar</strong>
        </li>
        <li class="avatar">

            @foreach (var item in Model)
            {
                <a href="/UserContact/GetInboxMessageDetails/@item.ContactId">
                    <div>@item.Heading</div>
                    <small>@item.SenderMail</small>
                </a>
            }
        </li>
        <li class="dropdown-menu-footer text-center">
            <a href="/UserContact/Inbox/">Tüm Mesajlar</a>
        </li>
    </ul>
</li>