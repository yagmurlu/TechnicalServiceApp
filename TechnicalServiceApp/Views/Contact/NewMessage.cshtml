@model EntityLayer.Concrete.Contact
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE HTML>
<html>
<body class="cbp-spmenu-push">
    <div class="main-content">
        <!-- main content start-->
        <div id="page-wrapper">
            <div class="main-page compose">
                @Html.Action("ContactPartial", "Contact")
                <div class="col-md-8 compose-right widget-shadow" >
                    @using (Html.BeginForm("NewMessage", "Contact", FormMethod.Post))
                    {

                        <div class="panel-default">
                            <div class="panel-heading" style="background-color: #6164C1;font-size:15.5px;color:white">
                                Mesaj Oluştur
                            </div>
                            <div class="panel-body">
                                <form class="com-mail">

                                    @*<input type="text" class="form-control1 control3" placeholder="Alıcı :">
        <input type="text" class="form-control1 control3" placeholder="Konu :" >
        <textarea rows="6" class="form-control1 control2" placeholder="Mesaj :"></textarea>*@

                                    <div class="form-group">
                                        @Html.Label("Alıcı:")
                                        @Html.TextBoxFor(x => x.RecevierMail, new { @class = "form-control1 control3" })
                                        @Html.ValidationMessageFor(x => x.RecevierMail, "", new { @class = "text-danger " })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Konu:")
                                        @Html.TextBoxFor(x => x.Heading, new { @class = "form-control1 control3" })
                                        @Html.ValidationMessageFor(x => x.Heading, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Mesajınız:")
                                        <textarea  name="Contents" class="form-control1 control2" style="height: 200px; direction:ltr">
                                       
                                        </textarea>
                                    </div>


                                    <div class="form-group">
                                        <div class="btn btn-default btn-file">
                                            <i class="fa fa-paperclip"></i> Ekle
                                            <input type="file" name="attachment">
                                        </div>
                                        <p class="help-block">Max. 32MB</p>
                                    </div>
                                    

                                    <button type="submit" name="menuName" value="send" class="btn btn-success">
                                        <i class="fas fa-envelope">Gönder</i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
                <div class="clearfix"> </div>


            </div>
        </div>
    </div>
</body>
</html>
