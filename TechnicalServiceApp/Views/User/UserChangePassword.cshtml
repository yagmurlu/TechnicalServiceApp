@model EntityLayer.Concrete.User
@{
    ViewBag.Title = "UserChangePassword";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="xs">
    <div class="well1 white">
        <h4 style="text-align:center"><b>Şifre Güncelleme</b></h4>
        @using (Html.BeginForm("UserChangePassword", "User", FormMethod.Post))
        {
            <table class="center">
                <tr>

                    <td>
                        @Html.HiddenFor(x => x.UserId, new { @class = "form-control" })
                        @Html.HiddenFor(x => x.UserMail)

                    </td>
                    @*<td>@Html.ValidationMessageFor(x => x.AdminMail)</td>*@
                </tr>
                <tr>
                    <td>Mevcut Şifre: </td>
                    <td>
                        @Html.PasswordFor(x => x.UserPassword)
                    </td>
                    <td>@Html.ValidationMessageFor(x => x.UserPassword, "", new { @style = "color: red " })</td>
                </tr>
                <tr class="rowspace">
                    <td><br />Yeni Şİfre:  </td>

                    <td>
                        <br />
                        @Html.PasswordFor(x => x.UserNewPassword)
                        <br />
                    </td>

                    <td>@Html.ValidationMessageFor(x => x.UserNewPassword, "", new { @style = "color: red " })</td>
                </tr>

                <tr class="rowspace">

                    @*<td colspan="3" id="button">
                            <br />
                            <input type="submit" value="Güncelle" />
                            <br />
                        </td>*@
                    <td style="margin-bottom:15px;position:relative;margin-left:460px">
                        <br />
                        <button type="submit" value="update" class="btn btn-primary">
                            Güncelle
                        </button>
                    </td>
                </tr>

                <tr class="rowspace">

                    <td colspan="3" style="color:darkblue">
                        <br />
                        @ViewBag.Message
                    </td>
                </tr>
            </table>
            <br />
            <br />

        }
    </div>
</div>
